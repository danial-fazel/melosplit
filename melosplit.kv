<MyScreenManager>:
    LoginScreen:
    SignupScreen:
    GroupManagerScreen:
    AddGroupScreen:
    MemberInputsScreen:
    GroupScreen:
    AddExpenseScreen:
    AddRecurringBillScreen:
    MemberSummaryScreen:
    SettleUpScreen:
    SettlePaymentScreen:
    GraphVisualizationScreen:
    UserProfileScreen:
    NotificationScreen:


<LoginScreen>:
    name: "login"
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 20]
        spacing: 15

        MDLabel:
            text: "Login"
            font_style: "H4"
            halign: "center"

        MDTextField:
            id: email_input
            hint_text: "Email"
            mode: "rectangle"

        MDTextField:
            id: password_input
            hint_text: "Password"
            password: True
            mode: "rectangle"

        MDRaisedButton:
            text: "Login"
            on_release: root.login()

        MDTextButton:
            text: "Don't have an account? Sign up here."
            on_release: app.root.current = "signup"

<SignupScreen>:
    name: "signup"
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 20]
        spacing: 15

        MDLabel:
            text: "Sign Up"
            font_style: "H4"
            halign: "center"

        MDTextField:
            id: email_input
            hint_text: "Email"
            mode: "rectangle"

        MDTextField:
            id: password_input
            hint_text: "Password"
            password: True
            mode: "rectangle"

        MDRaisedButton:
            text: "Sign Up"
            on_release: root.signup()

        MDTextButton:
            text: "Already have an account? Login here."
            on_release: app.root.current = "login"


<GroupManagerScreen>:
    name: "group_manager"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 15

        MDLabel:
            text: "Group Manager"
            font_style: 'H4'
            size_hint: 1, None
            height: "100dp"
            halign: "center"

        ScrollView:
            MDList:
                id: group_list

        MDRaisedButton:
            text: "Add Group"
            on_release: root.manager.current = "add_group_screen"

        MDRaisedButton:
            text: "User Profile"
            on_release: root.manager.current = "user_profile_screen"

<AddGroupScreen>:
    name: "add_group_screen"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 15

        MDLabel:
            text: "Add Group"
            font_style: "H4"
            size_hint: 1, None
            height: "100dp"
            halign: "center"

        MDTextField:
            id: group_name_input
            hint_text: "Group Name"
            mode: "rectangle"

        MDTextField:
            id: num_members_input
            hint_text: "Number of Members"
            input_filter: "int"
            mode: "rectangle"

        MDTextField:
            id: description_input
            hint_text: "description"
            mode: "rectangle"

        MDTextField:
            id: category_input
            hint_text: "Category"
            on_focus: root.open_category_menu(self)

        MDRaisedButton:
            text: "Next"
            on_release: root.next_step()

        MDRaisedButton:
            text: "Back"
            md_bg_color: 0.3, 0.3, 0.3, 1
            on_release: root.manager.current = "group_manager"

<MemberInputsScreen>:
    name: "member_inputs_screen"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 15

        ScrollView:
            MDList:
                id: member_inputs_list

        MDRaisedButton:
            text: "Submit"
            on_release: root.submit_group()

        MDRaisedButton:
            text: "Back"
            md_bg_color: 0.3, 0.3, 0.3, 1
            on_release: root.manager.current = "add_group_screen"

<MemberTemplate>:
    orientation: "horizontal"
    spacing: 10
    size_hint_y: None
    height: dp(56)

    MDTextField:
        id: member_name
        hint_text: "Member Name"
        mode: "rectangle"

    MDTextField:
        id: member_email
        hint_text: "Member Email (optional)"
        mode: "rectangle"



<GroupScreen>:
    name: "group_screen"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 15

        MDLabel:
            id: group_title
            text: "Group Screen"
            font_style: "H4"
            size_hint: 1, None
            height: "100dp"
            halign: "center"

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(56)
            spacing: 10
            halign: "center"

            MDRaisedButton:
                text: "Select Start Date"
                md_bg_color: 0.3, 0.5, 1, 1
                on_release: root.open_date_picker("start")

            MDRaisedButton:
                text: "Select End Date"
                md_bg_color: 0.3, 0.5, 1, 1
                on_release: root.open_date_picker("end")

            MDRaisedButton:
                text: "Filter Timeline"
                md_bg_color: 0.3, 0.5, 1, 1
                on_release: root.filter_transactions_by_timeline()

            MDRaisedButton:
                id: toggle_view_button
                text: "Show Categorized"
                md_bg_color: 0.3, 0.5, 1, 1
                on_release: root.toggle_transaction_view()

            MDRaisedButton:
                text: "Sort"
                md_bg_color: 0.3, 0.5, 1, 1
                on_release: root.open_sort_menu()

        ScrollView:
            MDList:
                id: transactions_history

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(56)
            spacing: 10
            
            MDRaisedButton:
                text: "Back"
                md_bg_color: 0.3, 0.3, 0.3, 1
                on_release: root.manager.current = "group_manager"

            MDRaisedButton:
                text: "Member Summary"
                on_release: app.root.current = "member_summary_screen"

            MDRaisedButton:
                text: "Add Expenses"
                on_release: app.root.current = "add_expense_screen"

            MDRaisedButton:
                text: "Add Recurring Bill"
                on_release: app.root.current = "add_recurring_bill_screen"  

            MDRaisedButton:
                text: "Settle Up"
                on_release: app.root.current = "settle_up_screen"
            MDRaisedButton:
                text: "Generate Story"
                on_release: root.generate_story()




<TransactionHistoryWidget@BoxLayout>:
    orientation: "vertical"
    size_hint_y: None
    height: dp(80)
    padding: 10
    spacing: 5

    MDLabel:
        text: f"[b]Payer:[/b] {root.payer}"
        markup: True
        font_size: dp(14)

    MDLabel:
        text: f"[b]Participants:[/b] {root.participants}"
        markup: True
        font_size: dp(14)

    MDLabel:
        text: f"[b]Amount:[/b] {root.amount} USD"
        markup: True
        font_size: dp(14)

    MDLabel:
        text: f"[b]Description:[/b] {root.description}"
        markup: True
        font_size: dp(14)

    MDLabel:
        text: f"[b]Date:[/b] {root.date}"
        markup: True
        font_size: dp(12)

<MemberSummaryScreen>:
    name: "member_summary_screen"

    BoxLayout:
        orientation: "vertical"
        padding: "20dp" 
        spacing: "10dp"

        ScrollView:
            BoxLayout:
                id: member_list
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "20dp"  

        MDLabel:
            id: total_expenses_label
            text: "Total Expenses: 0.00"
            theme_text_color: "Primary"
            size_hint_y: None
            height: "40dp"
            font_size: "20sp"
            halign: "center"

        MDLabel:
            id: category_summary_label
            text: "Category Summary: "
            # theme_text_color: "Secondary"
            size_hint_y: None
            height: "40dp"
            font_size: "18sp"
            halign: "center"

        BoxLayout:
            size_hint_y: None
            height: "50dp"
            padding: "10dp"
            spacing: "10dp"
            halign: "center"

            MDRaisedButton:
                text: "Back"
                md_bg_color: 0.3, 0.3, 0.3, 1
                on_release: root.go_back()

            MDRaisedButton:
                text: "Add Expense"
                on_release: root.add_expense()

            MDRaisedButton:
                text: "Settle Up"
                on_release: root.settle_up()

            MDRaisedButton:
                text: "See Graph"
                size_hint: None, None
                size: "200dp", "50dp"
                pos_hint: {"center_x": 0.5}
                on_release: app.root.current = "graph_visualization_screen"

            MDRaisedButton:
                text: "Add Member"
                on_release: root.open_add_member_dialog()

            MDRaisedButton:
                text: "Remove Member"
                on_release: root.open_remove_member_dialog()



<AddExpenseScreen>:
    name: "add_expense_screen"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        MDFlatButton:
            id: payer_dropdown
            text: "Select Payer"
            on_release: root.open_payer_dropdown(self)

        MDTextField:
            id: amount
            hint_text: "Amount"
            input_filter: "float"

        MDTextField:
            id: currency_field
            hint_text: "Currency (e.g., IRTT)"
            on_focus: root.open_currency_menu(self)

        MDTextField:
            id: split_type
            hint_text: "Split Type"
            on_focus: root.open_split_type_menu(self)

        MDTextField:
            id: category
            hint_text: "Category"
            on_focus: root.open_category_menu(self)

        MDRaisedButton:
            text: "Select Participants"
            on_release: root.open_participant_dialog()

        MDLabel:
            id: selected_participants_label
            text: "Selected Participants: None"
            halign: "center"

        MDTextField:
            id: description
            hint_text: "Description (Optional)"

        MDLabel:
            id: error_label
            text: ""
            color: 1, 0, 0, 1  # Red color for error messages
            halign: "center"

        MDRaisedButton:
            text: "Submit"
            on_release: root.add_expense()

        ScrollView:
            MDList:
                id: participant_list

        MDRaisedButton:
            text: "Back"
            md_bg_color: 0.3, 0.3, 0.3, 1
            on_release: app.root.current = "group_screen"
            
<ParticipantListItem>:
    uid: ""
    text: ""
    IconLeftWidget:
        id: checkbox
        icon: "checkbox-blank-outline"
        on_release: root.toggle_participant()

<ParticipantDialogContent>:
    ScrollView:
        MDList:
            id: participant_list

<AddRecurringBillScreen>:
    name: "add_recurring_bill_screen"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        MDFlatButton:
            id: payer_dropdown
            text: "Select Payer"
            on_release: root.open_payer_dropdown(self)

        MDTextField:
            id: amount
            hint_text: "Amount"
            input_filter: "float"


        MDTextField:
            id: split_type
            hint_text: "Split Type"
            on_focus: root.open_split_type_menu(self)

        MDRaisedButton:
            text: "Select Participants"
            on_release: root.open_participant_dialog()

        MDLabel:
            id: selected_participants_label
            text: "Selected Participants: None"
            halign: "center"

        MDTextField:
            id: frequency
            hint_text: "Frequency"
            on_focus: root.open_frequency_menu(self)

        MDRaisedButton:
            text: "Select Next Due Date"
            on_release: root.open_date_picker()

        MDLabel:
            id: selected_date_label
            text: "Next Due Date: Not Selected"
            halign: "center"

        MDTextField:
            id: description
            hint_text: "Description (Optional)"

        MDRaisedButton:
            text: "Submit"
            on_release: root.add_recurring_bill()

        MDRaisedButton:
            text: "Back"
            md_bg_color: 0.3, 0.3, 0.3, 1
            on_release: app.root.current = "group_screen"

<SettleUpScreen>:
    name: "settle_up_screen"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        MDLabel:
            text: "Settle-Up Transactions"
            font_style: "H4"
            size_hint: 1, None
            height: "100dp"
            halign: "center"

        ScrollView:
            MDList:
                id: settle_up_list

        MDRaisedButton:
            text: "Back"
            md_bg_color: 0.3, 0.3, 0.3, 1
            on_release: app.root.current = "group_screen"

<SettlePaymentScreen>:
    name: "settle_payment_screen"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        MDTextField:
            id: payer_name
            hint_text: "Payee Name (Should be you)"
            text: app.payer

        MDTextField:
            id: payee_name
            hint_text: "Payer Name (Did they settle up?)"
            text: app.payee

        MDTextField:
            id: amount
            hint_text: "Amount"
            text: str(app.amount)
            input_filter: "float"

        MDTextField:
            id: currency_field
            hint_text: "Currency (e.g., IRTT)"
            on_focus: root.open_currency_menu(self)

        MDRaisedButton:
            text: "Confirm Payment"
            on_release: root.confirm_payment()

        MDRaisedButton:
            text: "Back"
            md_bg_color: 0.3, 0.3, 0.3, 1
            on_release: app.root.current = "settle_up_screen"

<GraphVisualizationScreen>:
    name: "graph_visualization_screen"
    BoxLayout:
        orientation: "vertical"
        id: graph_container
        Image:
            id: graph_image
            source: "graph_image.png"  # Replace with your image file name
            allow_stretch: True
            keep_ratio: True
        BoxLayout:
            size_hint_y: None
            height: "50dp"
            orientation: "horizontal"
            padding: "10dp"
            MDRaisedButton:
                text: "Back"
                md_bg_color: 0.3, 0.3, 0.3, 1
                on_release: app.root.current = "member_summary_screen"


<UserProfileScreen>:
    name: "user_profile_screen"
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        MDLabel:
            text: "User Profile"
            font_style: "H4"
            size_hint: 1, None
            height: "100dp"
            halign: "center"

        MDLabel:
            id: net_balance_label
            text: "loading your net balance"
            theme_text_color: "Primary"
            halign: "center"

        MDRaisedButton:
            text: "View Notifications"
            on_release: app.root.current = "notifications"

        MDRaisedButton:
            text: "Back"
            md_bg_color: 0.3, 0.3, 0.3, 1
            on_release: app.root.current = "group_manager"
        MDRaisedButton:
            text: "log out"
            md_bg_color: 0.6, 0, 0, 1
            on_release: root.logout()

<NotificationScreen>:
    name: "notifications"
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        MDLabel:
            text: "Notifications"
            font_style: "H4"
            size_hint: 1, None
            height: "100dp"
            halign: "center"

        ScrollView:
            MDList:
                id: notification_list

        MDRaisedButton:
            text: "Back"
            md_bg_color: 0.3, 0.3, 0.3, 1
            on_release: app.root.current = "user_profile_screen"

<NotificationItem>:
    orientation: "vertical"
    size_hint_y: None
    height: dp(100)
    BoxLayout:
        orientation: "horizontal"
        spacing: dp(10)
        MDLabel:
            id: message_label
            text: ""
            size_hint_x: 0.7
        MDRaisedButton:
            id: confirm_button
            text: "Confirm"
        MDRaisedButton:
            id: edit_button
            text: "Edit"
        MDRaisedButton:
            id: dismiss_button
            text: "Dismiss"

